<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sql">
<select id="sel" resultType="com.board.controller.BoardDto">     <!-- resultType 본인 환경에 맞게 수정 필요 Dto class 위치 까지 표시 -->
	SELECT * FROM board
</select>
<!-- 게시물 목록 -->
<select id="list" resultType="com.board.controller.BoardDto">
 select
  "BOARD_NO", "BOARD_TITLE", "BOARD_CONTENT", "BOARD_WRITER", "BOARD_READCOUNT", "BOARD_REGDATE"
 from board
</select>
<!-- 게시물 작성 -->
<insert id="write" parameterType="com.board.controller.BoardDto">
 insert into
  board("BOARD_NO","BOARD_TITLE", "BOARD_CONTENT", "BOARD_WRITER","BOARD_REGDATE")
   values(6,#{board_title}, #{board_content}, #{board_writer},#{board_regDate})
</insert>
<!-- 게시물 조회 -->
<select id="view" parameterType="int" resultType="com.board.controller.BoardDto">
 select 
  "BOARD_NO", "BOARD_TITLE", "BOARD_CONTENT", "BOARD_WRITER", "BOARD_REGDATE", "BOARD_READCOUNT"
 from 
  board
 where
  "BOARD_NO" = #{board_no}   
</select>

<!-- 게시물 수정 -->
<update id="modify" parameterType="com.board.controller.BoardDto" >
 update board
  set
   "BOARD_TITLE" = #{board_title},
   "BOARD_CONTENT" = #{board_content},
   "BOARD_WRITER"= #{board_writer}
  where "BOARD_NO" = #{board_no}
</update>

<!-- 게시물 삭제 -->
<delete id="delete" parameterType="int">
 delete
  from tbl_board
 where "BOARD_NO" = #{board_no}
</delete>

</mapper>
